{
  "env": {
    "browser": true,
    "es6": true,
    "jquery": true,
    "node": true,
    "commonjs": true
  },

  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "indent": ["error", "tab"],
    "linebreak-style": ["error", "windows"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-undef": "off"
  }
}